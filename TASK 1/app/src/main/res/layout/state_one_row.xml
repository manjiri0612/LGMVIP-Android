<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

   <RelativeLayout
       android:id="@+id/RLtesting"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:padding="10dp"
       android:gravity="center_vertical">
       <LinearLayout
           android:id="@+id/LL1testing"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
           android:id="@+id/txtStateName"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="State Name"
           android:gravity="center"
           android:textColor="@color/black"
           android:textSize="20sp"
           android:textStyle="bold"
           android:textAllCaps="true"/>

       </LinearLayout>

       <LinearLayout
           android:id="@+id/LL2testing"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="18dp"
           android:weightSum="5"
           android:orientation="horizontal"
           android:layout_below="@+id/LL1testing">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingRight="3dp"
               android:layout_weight="2.5"
               android:layout_gravity="end"
               android:padding="5dp"
               android:textAlignment="textEnd"
               android:text="Total Cases :"
               android:textColor="#000000"
               android:textSize="18sp"
               android:textStyle="bold"/>

           <TextView
               android:id="@+id/txtTotalCasesNo"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="5dp"
               android:layout_weight="2.5"
               android:text="00000"
               android:textColor="@color/black"
               android:textSize="18sp"
               android:textStyle="bold"/>




       </LinearLayout>
       <LinearLayout
           android:id="@+id/LL3testing"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="4"
           android:layout_below="@+id/LL2testing"
           >
           <TextView
               android:id="@+id/txtRecoveredCases"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:padding="5dp"
               android:text="Recovered Cases:"
               android:textAllCaps="true"
               android:textColor="@color/green"
               android:textSize="13sp"
               android:textStyle="bold" />
           <TextView
               android:id="@+id/txtRecoveredCasesNo"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:padding="5dp"
               android:text="00000000000"
               android:textColor="@color/black"
               android:textSize="13sp"
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/txtDeaths"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="right"
               android:layout_weight="1"
               android:padding="5dp"
               android:text="Deaths:"
               android:textAllCaps="true"
               android:textColor="@color/red"
               android:textSize="13sp"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/txtDeathCasesNo"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:padding="5dp"
               android:text="00000"
               android:textColor="@color/black"
               android:textSize="13sp"
               android:textStyle="bold" />


       </LinearLayout>



       </RelativeLayout>

</androidx.cardview.widget.CardView>